<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminViewGroupedProductInCustomerWishlistOnBackendTest">
        <annotations>
            <stories value="Wishlist"/>
            <title value="View Grouped Product in Customer Wishlist on Backend"/>
            <description value="View Grouped Product in Customer Wishlist on Backend"/>
            <severity value="CRITICAL"/>
            <testCaseId value="MAGETWO-29616"/>
            <group value="wishlist"/>
            <group value="mtf_migrated"/>
        </annotations>
        <before>
            <!-- Create Data -->
            <createData entity="Simple_US_Customer" stepKey="createCustomer"/>
            <createData entity="_defaultCategory" stepKey="createCategory"/>

            <!-- Create grouped product with three simple products -->
            <createData entity="SimpleProduct2" stepKey="createFirstSimpleProduct">
                <field key="price">10</field>
            </createData>
            <createData entity="SimpleProduct2" stepKey="createSecondSimpleProduct">
                <field key="price">20</field>
            </createData>
            <createData entity="SimpleProduct2" stepKey="createThirdSimpleProduct">
                <field key="price">30</field>
            </createData>
            <createData entity="ApiGroupedProduct2" stepKey="createGroupedProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <createData entity="OneSimpleProductLink" stepKey="addFirstProductToLink">
                <requiredEntity createDataKey="createGroupedProduct"/>
                <requiredEntity createDataKey="createFirstSimpleProduct"/>
            </createData>
            <updateData entity="OneMoreSimpleProductLink" createDataKey="addFirstProductToLink" stepKey="addSecondProductTwo">
                <requiredEntity createDataKey="createGroupedProduct"/>
                <requiredEntity createDataKey="createSecondSimpleProduct"/>
            </updateData>
            <updateData entity="OneMoreSimpleProductLink" createDataKey="addFirstProductToLink" stepKey="addThirdProductThree">
                <requiredEntity createDataKey="createGroupedProduct"/>
                <requiredEntity createDataKey="createThirdSimpleProduct"/>
            </updateData>
        </before>
        <after>
            <!-- Delete data -->
            <deleteData createDataKey="createCustomer" stepKey="deleteCustomer"/>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createFirstSimpleProduct" stepKey="deleteFirstProduct"/>
            <deleteData createDataKey="createSecondSimpleProduct" stepKey="deleteSecondProduct"/>
            <deleteData createDataKey="createThirdSimpleProduct" stepKey="deleteThirdProduct"/>
            <deleteData createDataKey="createGroupedProduct" stepKey="deleteGroupedProduct"/>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <!-- 1. Login as a customer -->
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefrontAccount">
            <argument name="Customer" value="$$createCustomer$$"/>
        </actionGroup>

        <!-- 2. Navigate to catalog page -->
        <actionGroup ref="OpenProductFromCategoryPageActionGroup" stepKey="openProductFromCategory">
            <argument name="category" value="$$createCategory$$"/>
            <argument name="product" value="$$createGroupedProduct$$"/>
        </actionGroup>

        <fillField selector="{{StorefrontProductPageSection.qtyInputWithProduct($$createFirstSimpleProduct.name$$)}}" userInput="3" stepKey="fillQuantityForProduct1"/>
        <fillField selector="{{StorefrontProductPageSection.qtyInputWithProduct($$createSecondSimpleProduct.name$$)}}" userInput="2" stepKey="fillQuantityForProduct2"/>
        <fillField selector="{{StorefrontProductPageSection.qtyInputWithProduct($$createThirdSimpleProduct.name$$)}}" userInput="1" stepKey="fillQuantityForProduct3"/>
        <click selector="{{StorefrontProductInfoMainSection.productName}}" stepKey="unfocus"/>

        <!--  3. Add created product to Wishlist according to dataset and assert add product to wishlist success message -->
        <actionGroup ref="StorefrontCustomerAddProductToWishlistActionGroup" stepKey="addProductToWishlist">
            <argument name="productVar" value="$$createGroupedProduct$$"/>
        </actionGroup>

        <!-- Assert Grouped Product In Customer Wishlist On Backend Grid -->
        <actionGroup ref="LoginAsAdmin" stepKey="LoginAsAdmin"/>
        <amOnPage url="{{AdminEditCustomerPage.url($$createCustomer.id$$)}}" stepKey="amOnCustomersPage"/>
        <waitForPageLoad stepKey="waitForPageLoad1"/>
        <click selector="{{WishlistGeneralSection.WishlistTab}}" stepKey="clickWishlistTab"/>
        <waitForPageLoad stepKey="waitForPageLoad2"/>
        <see selector="{{WishlistGeneralSection.productNameInGrid}}" userInput="$$createGroupedProduct.name$$" stepKey="seeProductName"/>
        <see selector="{{WishlistGeneralSection.productAttributeByProductNameInGrid($$createGroupedProduct.name$$)}}" userInput="$$createFirstSimpleProduct.name$$" stepKey="seeFirstProduct"/>
        <see selector="{{WishlistGeneralSection.productOptionByProductNameInGrid($$createGroupedProduct.name$$)}}" userInput="3" stepKey="seeNumberOfProduct1"/>
        <see selector="{{WishlistGeneralSection.productAttributeByProductNameInGrid($$createGroupedProduct.name$$)}}" userInput="$$createSecondSimpleProduct.name$$" stepKey="seeSecondProduct"/>
        <see selector="{{WishlistGeneralSection.productOptionByProductNameInGrid($$createGroupedProduct.name$$)}}" userInput="2" stepKey="seeNumberOfProduct2"/>
        <see selector="{{WishlistGeneralSection.productAttributeByProductNameInGrid($$createGroupedProduct.name$$)}}" userInput="$$createThirdSimpleProduct.name$$" stepKey="seeThirdProduct"/>
        <see selector="{{WishlistGeneralSection.productOptionByProductNameInGrid($$createGroupedProduct.name$$)}}" userInput="1" stepKey="seeNumberOfProduct3"/>
        <seeElement selector="{{WishlistGeneralSection.configureButtonWishlistByName($$createGroupedProduct.name$$)}}" stepKey="seeConfigButton"/>
    </test>
</tests>
